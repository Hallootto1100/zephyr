config STEPPER_ALLEGRO
	bool "Allegro Stepper Controller"
	depends on STEPPER
	default y
	help
	  Enable allegro stepper controller

if STEPPER_ALLEGRO

comment "TI Stepper Drivers"

rsource "Kconfig.a4988"

endif # STEPPER_ALLEGRO
